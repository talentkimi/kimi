package core.lang.basic;

/**
 * A Basic Array.
 */
public interface BasicArray {

	/**
	 * Returns the size of the array.
	 * @return the size of the array.
	 */
	int size();

	/**
	 * Set the size.
	 * @param size the size.
	 */
	void setSize(int size);

	/**
	 * Removes the element at the given index.
	 * @param index the index.
	 */
	void remove(int index);

	/**
	 * Clears the array.
	 */
	void clear();

	/**
	 * Add the given basic type.
	 * @param type the type.
	 */
	void add(BasicType type);

	/**
	 * Set the given basic type at the given index.
	 * @param index the index.
	 * @param type the type.
	 */
	void set(int index, BasicType type);

	/**
	 * Returns the index of the given basic type.
	 * @param type the type.
	 * @return the index.
	 */
	int indexOf(BasicType type);

	/**
	 * Returns the count of the given basic type.
	 * @param type the type.
	 * @return the count.
	 */
	int count(BasicType type);

	/**
	 * Returns an array of indexes of the given basic type.
	 * @param type the type.
	 * @return the array of indexes.
	 */
	BasicIndexArray arrayIndexOf(BasicType type);

}
