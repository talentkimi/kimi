package core.lang.thread;

/**
 * Interface defining an object which optionally contains a runnable object it runs.
 */
public interface RunnableContainer {

	/**
	 * Returns true if this is running the runnable.
	 * @return true if this is running the runnable.
	 */
	boolean isRunningRunnable();

	/**
	 * Returns the runnable start time.
	 * @return the runnable start time.
	 */
	long getRunnableStartTime();

	/**
	 * Returns the runnable object, or null if none present.
	 * @return the runnable object, or null if none present.
	 */
	Runnable getRunnable();

}
